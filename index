    function normalizeCue(s){
      return s === "thrift y win" ? "thrifty win" : s;
    }

    function shuffleInPlace(arr){
      for(let i = arr.length - 1; i > 0; i--){
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
      return arr;
    }

    function uniquePoolFrom(list){
      const seen = new Set();
      const out = [];
      for(const raw of list){
        const v = normalizeCue(String(raw).trim());
        if(!v) continue;
        if(seen.has(v)) continue;
        seen.add(v);
        out.push(v);
      }
      return out;
    }

    function buildVocabGrid(){
      const grid = document.getElementById("vocabGrid");
      if(!grid) return;

      const pool = uniquePoolFrom(CASTER_VOCAB_POOL);
      if(pool.length < 50){
        grid.innerHTML = `<div style="color: rgba(255,255,255,.8); padding: 10px;">
          Not enough unique vocab items to fill 50 slots.
        </div>`;
        return;
      }

      shuffleInPlace(pool);
      const picks = pool.slice(0, 50);

      const columns = 5;
      const rows = 10;

      grid.innerHTML = "";
      for(let c=0; c<columns; c++){
        const ul = document.createElement("ul");
        for(let r=0; r<rows; r++){
          const li = document.createElement("li");
          li.textContent = picks[c*rows + r];
          ul.appendChild(li);
        }
        grid.appendChild(ul);
      }
    }

    // init
    renderTeamRow("team1Row");
    renderTeamRow("team2Row");

    document.getElementById("clearAllBtn").addEventListener("click", clearAll);
    document.getElementById("swapBtn").addEventListener("click", swapTeams);

    document.getElementById("lockToggle").addEventListener("change", (e) => {
      setLocked(e.target.checked);
    });

    // Start blank + unlocked
    allSelects().forEach(s => { s.value = ""; s.dispatchEvent(new Event("change")); });
    setLocked(false);

    // Randomize vocab on load
    buildVocabGrid();
  </script>
