  <script>
    const AGENTS = {
      "Astra":      { role:"Controller", C:"Gravity Well",       Q:"Nova Pulse",          E:"Nebula / Dissipate",      X:"Astral Form / Cosmic Divide" },
      "Breach":     { role:"Initiator",  C:"Aftershock",         Q:"Flashpoint",          E:"Fault Line",              X:"Rolling Thunder" },
      "Brimstone":  { role:"Controller", C:"Incendiary",         Q:"Sky Smoke",           E:"Stim Beacon",             X:"Orbital Strike" },
      "Chamber":    { role:"Sentinel",   C:"Trademark",          Q:"Headhunter",          E:"Rendezvous",              X:"Tour de Force" },
      "Clove":      { role:"Controller", C:"Meddle",             Q:"Pick-me-up",          E:"Ruse",                    X:"Not Dead Yet" },
      "Cypher":     { role:"Sentinel",   C:"Trapwire",           Q:"Cyber Cage",          E:"Spycam",                  X:"Neural Theft" },
      "Deadlock":   { role:"Sentinel",   C:"GravNet",            Q:"Sonic Sensor",        E:"Barrier Mesh",            X:"Annihilation" },
      "Fade":       { role:"Initiator",  C:"Prowler",            Q:"Seize",               E:"Haunt",                   X:"Nightfall" },
      "Gekko":      { role:"Initiator",  C:"Mosh Pit",           Q:"Wingman",             E:"Dizzy",                   X:"Thrash" },
      "Harbor":     { role:"Controller", C:"Cascade",            Q:"Cove",                E:"High Tide",               X:"Reckoning" },
      "Iso":        { role:"Duelist",    C:"Contingency",        Q:"Undercut",            E:"Double Tap",              X:"Kill Contract" },
      "Jett":       { role:"Duelist",    C:"Cloudburst",         Q:"Updraft",             E:"Tailwind",                X:"Blade Storm" },
      "KAY/O":      { role:"Initiator",  C:"FRAG/ment",          Q:"FLASH/drive",         E:"ZERO/point",              X:"NULL/cmd" },
      "Killjoy":    { role:"Sentinel",   C:"Nanoswarm",          Q:"Alarmbot",            E:"Turret",                  X:"Lockdown" },
      "Neon":       { role:"Duelist",    C:"Fast Lane",          Q:"Relay Bolt",          E:"High Gear",               X:"Overdrive" },
      "Omen":       { role:"Controller", C:"Shrouded Step",      Q:"Paranoia",            E:"Dark Cover",              X:"From the Shadows" },
      "Phoenix":    { role:"Duelist",    C:"Blaze",              Q:"Curveball",           E:"Hot Hands",               X:"Run It Back" },
      "Raze":       { role:"Duelist",    C:"Boom Bot",           Q:"Blast Pack",          E:"Paint Shells",            X:"Showstopper" },
      "Reyna":      { role:"Duelist",    C:"Leer",               Q:"Devour",              E:"Dismiss",                 X:"Empress" },
      "Sage":       { role:"Sentinel",   C:"Barrier Orb",        Q:"Slow Orb",            E:"Healing Orb",             X:"Resurrection" },
      "Skye":       { role:"Initiator",  C:"Regrowth",           Q:"Trailblazer",         E:"Guiding Light",           X:"Seekers" },
      "Sova":       { role:"Initiator",  C:"Owl Drone",          Q:"Shock Bolt",          E:"Recon Bolt",              X:"Hunter's Fury" },
      "Viper":      { role:"Controller", C:"Snake Bite",         Q:"Poison Cloud",        E:"Toxic Screen",            X:"Viper's Pit" },
      "Yoru":       { role:"Duelist",    C:"Fakeout",            Q:"Blindside",           E:"Gatecrash",               X:"Dimensional Drift" }
    };

    const TEAM_SLOTS = 5;

    function escapeHtml(str){
      return String(str)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    function roleToCssVar(role){
      switch(role){
        case "Duelist": return "var(--duelist)";
        case "Initiator": return "var(--initiator)";
        case "Controller": return "var(--controller)";
        case "Sentinel": return "var(--sentinel)";
        default: return "rgba(255,255,255,.12)";
      }
    }

    function applyRoleTint(slotEl, role){
      const col = roleToCssVar(role);
      slotEl.style.setProperty("--roleColor", col);
      slotEl.style.setProperty("--roleTint",  `color-mix(in srgb, ${col} 16%, transparent)`);
      slotEl.style.setProperty("--roleTint2", `color-mix(in srgb, ${col} 10%, transparent)`);
    }

    function agentOptionsHTML(){
      const names = Object.keys(AGENTS).sort((a,b)=>a.localeCompare(b));
      const opts = ['<option value="">Select agent…</option>'];
      for(const n of names){
        opts.push(`<option value="${escapeHtml(n)}">${escapeHtml(n)}</option>`);
      }
      return opts.join("");
    }

    function createSlot(slotIndex){
      const wrap = document.createElement("div");
      wrap.className = "slot";
      wrap.dataset.index = String(slotIndex);

      const label = String(slotIndex + 1).padStart(2,"0");
      wrap.innerHTML = `
        <div class="slotTop">
          <div class="slotLabel">Slot ${label}</div>
          <div class="roleTag" data-role="" title="Agent role">—</div>
        </div>
        <select aria-label="Select agent for slot ${label}">
          ${agentOptionsHTML()}
        </select>
        <div class="agentName">No agent selected</div>
        <div class="empty">Pick an agent to see ability names.</div>
        <ul class="abilityList" hidden></ul>
      `;

      const sel = wrap.querySelector("select");
      const nameEl = wrap.querySelector(".agentName");
      const emptyEl = wrap.querySelector(".empty");
      const list = wrap.querySelector(".abilityList");
      const roleTag = wrap.querySelector(".roleTag");

      function applyAgent(agent){
        if(!agent){
          nameEl.textContent = "No agent selected";
          emptyEl.hidden = false;
          list.hidden = true;
          list.innerHTML = "";
          roleTag.textContent = "—";
          roleTag.dataset.role = "";
          applyRoleTint(wrap, "");
          return;
        }

        const data = AGENTS[agent];
        nameEl.textContent = agent;

        roleTag.textContent = data.role || "—";
        roleTag.dataset.role = data.role || "";
        applyRoleTint(wrap, data.role);

        const items = [
          ["C", data.C],
          ["Q", data.Q],
          ["E", data.E],
          ["X", data.X]
        ];

        list.innerHTML = items.map(([k,v]) => `
          <li class="abilityItem">
            <span class="key">${k}</span>
            <span class="abilityName">${escapeHtml(v || "—")}</span>
          </li>
        `).join("");

        emptyEl.hidden = true;
        list.hidden = false;
      }

      sel.addEventListener("change", () => applyAgent(sel.value));
      applyAgent("");
      return wrap;
    }

    function renderTeamRow(containerId){
      const row = document.getElementById(containerId);
      row.innerHTML = "";
      for(let i=0;i<TEAM_SLOTS;i++){
        row.appendChild(createSlot(i));
      }
    }

    function allSelects(){
      return [...document.querySelectorAll(".slot select")];
    }

    function isLocked(){
      return document.getElementById("lockToggle").checked;
    }

    function clearAll(){
      if (isLocked()) return;
      allSelects().forEach(s => { s.value = ""; s.dispatchEvent(new Event("change")); });
    }

    function swapTeams(){
      if (isLocked()) return;

      const row1 = document.getElementById("team1Row");
      const row2 = document.getElementById("team2Row");

      const r1 = [...row1.querySelectorAll(".slot")];
      const r2 = [...row2.querySelectorAll(".slot")];

      for(let i=0;i<TEAM_SLOTS;i++){
        const s1 = r1[i].querySelector("select");
        const s2 = r2[i].querySelector("select");
        const tmp = s1.value;
        s1.value = s2.value;
        s2.value = tmp;
      }

      allSelects().forEach(s => s.dispatchEvent(new Event("change")));

      const t1 = document.getElementById("team1Name");
      const t2 = document.getElementById("team2Name");
      const tmpName = t1.textContent;
      t1.textContent = t2.textContent;
      t2.textContent = tmpName;
    }

    function setLocked(locked){
      allSelects().forEach(s => s.disabled = locked);

      const lockState = document.getElementById("lockState");
      const lockHelp = document.getElementById("lockHelp");
      if(locked){
        lockState.textContent = "LOCKED";
        lockState.classList.remove("off");
        lockState.classList.add("on");
        lockHelp.textContent = "Dropdowns and action buttons are disabled (team names still editable).";
      }else{
        lockState.textContent = "UNLOCKED";
        lockState.classList.remove("on");
        lockState.classList.add("off");
        lockHelp.textContent = "You can change agent selections.";
      }

      document.getElementById("clearAllBtn").disabled = locked;
      document.getElementById("swapBtn").disabled = locked;
    }

